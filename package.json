{
  "name": "node-webresource",
  "version": "0.0.0-development",
  "description": "Node module to upload web resources to Dynamics 365",
  "main": "dist/index.js",
  "types": "dist/index.t.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "semantic-release": "semantic-release",
    "build": "tsc -p .",
    "test": "jest",
    "commit": "git-cz"
  },
  "author": "Derek Finlinson",
  "license": "MIT",
  "dependencies": {
    "adal-node": ">=0.1.28",
    "xrm-webapi": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/derekfinlinson/node-webresource.git"
  },
  "bugs": {
    "url": "https://github.com/derekfinlinson/node-webresource/issues"
  },
  "homepage": "https://github.com/derekfinlinson/node-webresource#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/npm": "^2.0.30",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^24.5.0",
    "semantic-release": "^15.13.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
